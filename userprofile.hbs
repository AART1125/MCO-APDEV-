<div class="profile-main">
    <div class="profile-section1">
        <img class="profile-picture" src="profile_assets/test.jpg">
        <h1>{{fullname}}</h1>
        <p>{{username}}</p>
        <span class="buttons">
            <a href="edit_profile.html"><button>Edit Profile</button></a>
        </span>
    </div>

    <div class="profile-section2">
        <h1>Details</h1>
        <div class="likes">
            <h2>LIKES</h2>
            <ul>
                {{#each preferences}}
                    {{#if this.isLike}}
                        <li>{{this.preference}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>

        <div class="dislikes">
            <h2>DISLIKES</h2>
            <ul>
                {{#each preferences}}
                    {{#if this.isDislike}}
                        <li>{{this.preference}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="divide2"></div>

    {{#each reviews}}
        <div class="profile-section3">
            <h1>Reviews</h1>
            <div class="reviews">
                <img class="restaurant" src="index_assets/restaurants/{{this.restaurantName}}.webp">
                <span class="review">
                    <span class="head-review">
                        <h2>{{this.restaurantName}}</h2>
                        {{#each this.reactionIcons}}
                            <img class="react" src="profile_assets/{{this}}.png">
                        {{/each}}
                    </span>
                    <p>"{{this.reviewText}}"</p>
                    <a href="{{this.link}}" class="linkz"><button>View Review</button></a>
                </span>
            </div>
        </div>
    {{/each}}
</div>