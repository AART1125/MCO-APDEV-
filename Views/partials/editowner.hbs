<div class="profile-main">
    <div class="profile-section1">
        <img class="profile-picture" src="{{owner.profileimg}}">
        <h1>{{owner.fullname}}</h1>
        <p>{{owner.username}}</p>
        <span class="buttons">
            <a href="/deleteProfile/{{userID}}"><button class = "del">Delete Account</button></a>
        </span>
    </div>
        
        <div class = "edit-profile">
            <h1>Edit Profile</h1>
            <div class = "edit-form-table">
                <div class = "edit-form1">
                    <form>
                        Profile Picture <input type ="file" id = "password"><br>
