<div class="profile-main">
    <div class="profile-section1">
        <img class="profile-picture" src="{{owner.profileimg}}">
        <h1>{{owner.fullname}}</h1>
        <p>{{owner.username}}</p>
        <span class="buttons">
            <a href="/user-profile/{{username}}/edit-owner-profile"><button>Edit Profile</button></a>
        </span>
    </div>
    
    <div class="profile-section2">
        <h1>Details</h1>
        <div class="likes">
            <h2>CONTACT INFORMATION</h2>
                {{#each owner.contactinfo.titles}}
                    {{#with (lookup ../owner.contactinfo.links @index)}}
                        <a href="{{this}}" target="_blank" class="linkz">
                        <button class="linkzers">{{../this}}</button>
                        </a>
                    {{/with}}
                {{/each}}
        </div>
        <div class="dislikes">
            <h2>ADDITIONAL INFORMATION</h2>
            <li>{{owner.email}}</li>
            <li>{{owner.contactnum}}</li>
        </div>
    </div>
</div>

<div class="divide2"></div>

<div class="profile-section4">
    <h1>Restaurants</h1>
    <div class="reviews">
        {{#each owner.restaurants}}
        <img class="restaurant" src="{{this.restoimg}}">
        <span class="review">
            <span class="head-review"><h2>{{this.rname}}</h2>
                {{#if restostar}}
                    <script type="text/javascript">
                        for (var i = 0; i < {{restostar}}; i++) {
                            document.write('<img class="react" src="/common/images/istar.png">');
                        }
                    </script>
                {{/if}}
            </span>
            <p>{{this.restodesc}}</p>
                 <a href="/restaurant/{{this.restoname}}" class="linkz">
                <button class="limmerz">View Restaurant</button>
            </a>
        </span> 
        {{/each}}
    </div>
</div>
