<div class="profile-main">
    <div class="profile-section1">
        <img class="profile-picture" src="{{user.profileimg}}">
        <h1>{{user.fullname}}</h1>
        <p>{{user.username}}</p>
        <span class="buttons">
            <a href="/edit_profile"><button>Edit Profile</button></a>
        </span>
    </div>

    <div class="profile-section2">
        <h1>Details</h1>
        
        <div class="details">
            <h2>OTHER INFORMATION</h2>
            <ul>
                <li>{{user.email}}</li>
                <li>{{user.contactnum}}</li>
            </ul>
        </div>
        <div class="likes">
            <h2>LIKES</h2>
            <ul>
                {{#each user.preferences.isLike}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>

        <div class="dislikes">
            <h2>DISLIKES</h2>
            <ul>
                {{#each user.preferences.isDislike}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="profile-section3">
        <h1>Friends List</h1>
        <ul>
            {{#each user.friends}}
            <li>
                <img class="friend-picture" src="{{this.friendpic}}"> 
                <a href = "/{{this.friendid}}"></a>
                    <span>{{this.friendname}}</span>
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

<div class="divide2"></div>

{{#each user.reviews}}
    <div class="profile-section4">
        <h1>Reviews</h1>
        <div class="reviews">
            <img class="restaurant" src="{{this.restaurantimgs.[0]}}">
            <span class="review">
                <span class="head-review">
                    <h2>{{this.restaurant}}</h2>
                    {{#each this.reactionIcons}}
                        <img class="react" src="profile_assets/{{this}}.png">
                    {{/each}}
                </span>
                <p>"{{this.reviewText}}"</p>
                <a href="{{this.link}}" class="linkz"><button>View Review</button></a>
            </span>
        </div>
    </div>
{{/each}}
