<input type="hidden" name="hiddenval" id="hiddenval" value="{{restoname}}">
<input type="hidden" name="reviewId" id="hiddenrep" value="{{replyId}}">
<div class = "main">
    <div class="text-header">
        <h3>Revised Response: What are your thoughts about this review?</h3>
        <form action="/restaurant/{{restoname}}/post-reply" method="post" id="replyform"> 
            <textarea name="text-review" cols="30" rows="5" id="reply">{{reply}}</textarea>
            <div class="btn-group">
                <button type="submit" class="btn submit" id="submit">Submit</button>
                <button type="button" class="btn cancel" id="cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>